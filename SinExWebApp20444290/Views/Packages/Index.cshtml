@model IEnumerable<SinExWebApp20444290.Models.Package>

@{
    ViewBag.Title = "Index";
}

<h2>
    Packages for shipment (Waybill ID: <a href="/Shipments/Details/@ViewBag.Waybillid">@ViewBag.Waybillid.ToString("0000000000000000")</a>)
</h2>


<p>
    <a href="/Shipments/Details/@ViewBag.Waybillid">Back to shipment</a> |
    @Html.ActionLink("Add one more package for this shipment", "Create", new { WaybillId = ViewBag.Waybillid })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PackageType.Type)
        </th>	
	<th>
            Size
        </th>
	<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
	<th>
            Currency
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PackageType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageTypeSize.PackageType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @if (item.Weight != null)
                {
                    @item.Weight.Value.ToString("F1")
                }
            </td>
            <td>
                ¥ @Html.DisplayFor(modelItem => item.Fee)
            </td>

        </tr>
    }

</table>
